
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
@model cgpay.wallet.shared.Models.Merchant.MerchantUserCommon
<div class="card">
    @Html.HiddenFor(Model => Model.MerchantQr)
    <div class="card-body">
        <fieldset class="mb-1">
            <div class="row">
                <div class="col-md-6">
                    @Html.NLabelFor(model => model.FullName, new { @class = "form-control", autocomplete = "off" }, 2)
                    @Html.NLabelFor(model => model.UserEmail, new { @class = "form-control", autocomplete = "off" }, 2)
                    @Html.NLabelFor(model => model.UserMobileNumber, new { @class = "form-control", autocomplete = "off" }, 2)

                </div>

                <div class="col-md-6">
                    <div id="merchant-qr-code">
                        @if (Model.MerchantQr != "")
                        {
                            <img id="ProfiePic" src="@Model.MerchantQr" height="250" width="250" style="border: solid; text-align: center;" />
                            <br />
                            <br />
                            <a href="@Url.Action("PrintQR","Merchant",new {@Model.MerchantId})" target="_blank" class="btn btn-success btn-sm">Print<i class="icon-floppy-disk ml-2"></i></a>
                            @*<a href="#" target="_self" class="btn btn-success btn-sm" id="generatepdf" onclick="printForm('merchant-qr-code')">Print <i class="icon-floppy-disk ml-2"></i></a>*@
                        }

                    </div>
                </div>



            </div>
        </fieldset>
    </div>
</div>

