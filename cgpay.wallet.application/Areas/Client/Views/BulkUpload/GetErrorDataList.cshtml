@model List<cgpay.wallet.shared.Models.BulkUpload.BulkUploadCommon>
@{
    ViewBag.Title = "GetErrorDataList";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header header-elements-inline">
        @*<h6 class="card-title">
                <b style="color:red">*</b><b> Note: Please fill out all the field stating *(Mandatory) </b>
            </h6>*@
    </div>
    <div class="card-body">
        <div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td><a href="@Url.Action("GetErrorDetail", "BulkUpload",new { item.ProcessId })">@Html.Raw(item.DataId)</a></td>
                            <td>@Html.Raw(item.DataImportStatus)</td>
                            <td>@Html.Raw(item.Type)</td>
                            <td>@Html.Raw(item.Description)</td>
                            <td>@Html.Raw(item.Remarks)</td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div>
            <a href="@Url.Action("BulkTopUp","BulkUpload",new { @ViewBag.FileName, ViewBag.ProcessId })" class="btn btn-primary mt-2" >Continue</a>
            <a href="@Url.Action("ClearBulkData","BulkUpLoad")" class="btn btn-danger mt-2 float-right" >Clear</a>
        </div>


    </div>
</div>

